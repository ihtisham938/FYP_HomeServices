@model IEnumerable<OnlineHomeServices.DAL.Tbl_Service>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        List of Services
        <a href="../Admin/ServiceAdd" class="btn btn-info pull-right fa fa-plus">Add New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped custab" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>    
                        <th>Service Name</th>
                        <th>Date</th>
                        <th class=" text-center">Action</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Service</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @{ 

                                    int count = 1;
                                    foreach (var item in Model)
                                    {

                                        if (item.Username == User.Identity.Name)
                                        {


                    <tr>
                        <td>@count</td>
                        <td>@item.ProductName</td>
                        <td>@item.CreatedDate</td>
                        <td class="text-center">
                            <a href="@Url.Action("ServiceEdit",new { @item.ServiceId})" class="btn btn-info">Edit</a>
                            <a href="@Url.Action("serviceDelete",new { @item.ServiceId})" class="btn btn-danger">Delete</a>
                        </td>

                    </tr>

                            count++;
                        }
                    }

                        }

                </tbody>
            </table>
        </div>

    </div>
</div>