@model OnlineHomeServices.DAL.Tbl_User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>
    .btn {
        margin-top: 30px;
    }

    .error {
        color: red;
    }

    .input-group {
        margin-top: .25em;
        margin-bottom: 1.5em;
    }

    .title {
        padding-top: .5em
    }
</style>
@{var returnUrl = Context.Request.QueryString["ReturnUrl"];
    <form asp-route-returnurl="@returnUrl" method="post">
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <p class=" error">@ViewBag.error</p>
            <div class="row">
                <div class=" col-md-6">
                    <h2 class="title">Login</h2>

                    <div class="container">
                        <div class="from-group">
                            <label>Username</label>
                            <div class=" input-group">
                                <span class="input-group-addon"><i class=" glyphicon glyphicon-user"></i></span>
                                @Html.TextBoxFor(x => x.Username, new { @class = "form-control", style = "width:400px;" })
                                @Html.ValidationMessageFor(x => x.Username)
                            </div>
                        </div>
                    </div>



                    <div class="container">
                        <div class="from-group">
                            <label>Password</label>
                            <div class=" input-group">
                                <span class=" input-group-addon"><i class=" glyphicon glyphicon-lock"></i></span>
                                @Html.PasswordFor(x => x.password, new { @class = "form-control", style = "width:400px;" })
                                @Html.ValidationMessageFor(x => x.password)
                            </div>

                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Login</button>
                        </div>
                    </div>
                    <div class="float-right">
                        <input type="button" class="btn btn-dark" value="Admin mode" onclick="location.href='@Url.Action("banedUsers", "Admindata")'" />
                    </div>
                    <div style="margin-top:1em">
                        @Html.ActionLink("Do not have accout?", "Signup")
                    </div>

    </form>
}

        </div>
<div id="imagess" class=" col-md-6">
    <img src="~/Images/log.png" class=" img-responsive" />
</div>
    </div>


</div>