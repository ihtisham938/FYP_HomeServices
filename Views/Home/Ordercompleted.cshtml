@model IEnumerable<OnlineHomeServices.DAL.Tbl_Orders>
@{
    ViewBag.Title = "Home Page";
}
<a href="../Home/Index" class="btn btn-info pull-right fa fa-plus">Make New Request</a>

<h2>Completed Order</h2>


<div class="card mb-3">
    <div class="card-header">
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Seller name.</th>
                        <th>Description</th>
                        <th>Address</th>
                        <th>Date</th>
                        <th>Action</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {

                        if (item.CustomerName == User.Identity.Name && item.Status == "Complete")
                        {
                            <tr>
                                <td>@item.SellerName</td>
                                <td>@item.description</td>
                                <td>@item.Address</td>
                                <td>@item.Date</td>
                                <td>

                                    <a href="@Url.Action("ReviewByCustomer",new { @item.id})" class="btn btn-success">Review</a>
                                </td>
                            </tr>

                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>


