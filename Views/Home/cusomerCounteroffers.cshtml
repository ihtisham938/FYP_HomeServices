@model IEnumerable<OnlineHomeServices.DAL.Tbl_Orders>
@{
    ViewBag.Title = "Home Page";
}
<h2>Completed Order</h2>


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Counter Offer
        <a href="../Home/Index" class="btn btn-info pull-right fa fa-plus">Make New Request</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Seller name.</th>
                        <th>Description</th>
                        <th>Counter Offer</th>
                        <th>New charges</th>
                        <th>Date</th>
                        <th>Action</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {

                        if (item.CustomerName == User.Identity.Name && item.Status == "OfferPending")
                        {
                            int count = 1;
                            <tr>
                                <td>@item.SellerName</td>
                                <td>@item.description</td>
                                <td>@item.CounterOffer</td>
                                <td>@item.CounterOfferPrice</td>
                                <td>@item.Date</td>
                                <td>
                                    @Html.ActionLink("Review", "ReviewByCustomer", new { id = item.id })

                                </td>

                            </tr>
                            count++;

                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>


