@model IEnumerable<OnlineHomeServices.DAL.Tbl_User>

@{
    ViewBag.Title = "Adminpro";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (User.IsInRole("Admin"))
{


    <h2>Adminpro</h2>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            List of Services
            <a href="../Admindata/banedUsers" class="btn btn-info pull-right fa fa-ban">Baned Users</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped custab" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Username</th>
                            <th>Location</th>
                            <th class=" text-center">Action</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Username</th>
                            <th>Location</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                      
                        @foreach (var item in Model)
                        {
                            if (item.status == true)
                            {

                                int count = 1;

                                <tr>
                                    <td>@count</td>
                                    <td>@item.Username</td>
                                    <td>@item.Email</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Ban", new { @item.id })" class="btn btn-danger">Ban</a>
                                        <a href="@Url.Action("sellerreviews","Home", new { name = item.location})" type="button" class="btn btn-info ">Reviews</a>

                                    </td>
                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
}

